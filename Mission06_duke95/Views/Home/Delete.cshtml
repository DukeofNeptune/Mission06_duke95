@*
    ViewData["Title"] = "Delete Confirmation"
*@

@model AddMovieResponse
<!--Deletion Page-->
<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete the record for @Model.Title, Year: @Model.Year?</h3>

<!--form to add delete button and tie it to MovieId-->
<form method="post" asp-controller="Home" asp-action="Delete">
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="MovieList" class="btn btn-primary">Cancel</a>


    <input type="hidden" asp-for="MovieId"/>
</form>