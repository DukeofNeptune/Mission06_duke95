@*
    ViewData{"Title"} = Movie Library
*@

<!--Creating list for movies-->
@model List<AddMovieResponse>

<!--Creating Movie Library Table-->
<table class="table table-bordered table-striped table-dark">
    <thead class="font-weight-bold">
        <tr>
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent</td>
            <td>Notes</td>
        </tr>

    </thead>
    <!--Go through each variable in every column in the model-->
    <tbody>
        @foreach (var x in Model)
            {
            <tr>
                <td>@x.Category.CategoryName</td>
                <td>@x.Title</td>
                <td>@x.Year</td>
                <td>@x.Director</td>
                <td>@x.Rating</td>
                <td>@x.Edited</td>
                <td>@x.Lent</td>
                <td>@x.Notes</td>


                <!--Add Edit and Delete-->
                <td><a asp-controller="Home" asp-action="Edit" asp-route-movieid="@x.MovieId">Edit</a></td>
                <td><a asp-controller="Home" asp-action="Delete" asp-route-movieid="@x.MovieId">Delete</a></td>
            </tr>
            }
    </tbody>




</table>
